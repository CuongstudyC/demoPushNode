doctype html
html 
    head 
        title Customer List 
        link(rel="stylesheet", href="/stylesheets.style.css")
    body 
        h3 
            a(href="/customer/create",color="red") Create New
        h1 Customer List

        table 
            thead 
              tr 
                th Id 
                th Name 
                th Email 
                th Phone 
                th Action
            tbody 
              if customers != ''
                each item in customers 
                    tr 
                      td= item.id
                      td= item.name
                      td= item.email
                      td= item.phone
                      td 
                        a(href=`/customer/update/${item.id}`) Update 
                        a(href=`/customer/delete/${item.id}`) Delete
              else 
                tr 
                    td(colspan='4') No Data